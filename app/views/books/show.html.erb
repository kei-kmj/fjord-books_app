<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url, :size => '200x200') if @book.picture.present? %>
</p>

<%= link_to t('views.common.edit'), edit_book_path(@book) %> |
<%= link_to t('views.common.back'), books_path %>


<br>

<%= render 'comments/form', commentable: @book, comment: @comments %>


<% if @comments.count.zero? %>
  <p><%= t'no_comments_yet' %></p>
<% else %>
  <p><%= t 'comments_count' %>ï¼š<%= @comments.count %></p>
  <% @comments.each do |comment| %>
    <div>
      <% if comment.user.name.blank? %>
        <%= comment.user.email %>
      <% else %>
        <%= comment.user.name %>
      <% end %>

      <%= l(comment.created_at, format: :short)%><br>
      <div>
        <%= comment.comment %>
        <% if comment.user == current_user %>
          <div>
            <%= link_to t('views.common.destroy'), book_comment_path(@book, comment.id), method: :delete %>
          </div>
          </div>
          </div>
        <% end %>
  <% end %>
<% end %>

