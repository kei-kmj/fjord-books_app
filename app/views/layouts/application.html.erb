<!DOCTYPE html>
<html>
<head>
  <title><%=t'title' %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if user_signed_in? %>
  　<!--ルートページではヘッダーを呼び出さない -->
  <% unless current_page?(root_path) %>
    <header>
      <div class="btn-toolbar">
        <div class="btn-group">
          <%= link_to t('new_book'), new_book_path %>
          <%= link_to t('books_index'), books_path %>
          <%= link_to t('users_index'), users_path %>
          <%= link_to t('log_out'), destroy_user_session_path, method: :delete %>
        </div>
      </div>
    </header>
  <% end %>
<% end %>
<%= yield %>
</body>
</html>
